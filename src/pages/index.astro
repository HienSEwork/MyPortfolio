---
import BaseLayout from "../components/layout/BaseLayout.astro";
import mePortrait from "../assets/me.png";
import ProjectLibrary from "../components/ProjectLibrary.astro";
import { projectLibrary } from "../data/projects";

const meta = {
  title: "Hien Nguyen Ngoc | High-Conversion Landing Pages",
  description:
    "SEO-first landing pages with motion, performance, and conversion-focused UX for startups and founders.",
  url: "https://example.com",
};

const excludedSkills = new Set(["me"]);

const skillAssets = Object.entries(
  import.meta.glob("../assets/*.{png,jpg,jpeg,webp}", { eager: true })
)
  .map(([path, mod]) => {
    const file = path.split("/").pop() || "";
    const label = file.replace(/\.(png|jpe?g|webp)$/i, "").replace(/[-_]/g, " ");
    const src = mod.default?.src ?? mod.default ?? mod;
    return { src, label };
  })
  .filter((item) => !excludedSkills.has(item.label.toLowerCase()));

const normalize = (value) => value.toLowerCase().replace(/[^a-z0-9]/g, "");

const skillOrder = [
  {
    title: "Programming Languages",
    order: [
      ["js", "javascript"],
      ["java"],
      ["python"],
      ["csharp", "c#"],
    ],
  },
  {
    title: "Technologies / Frameworks",
    order: [
      ["react"],
      ["tailwind", "tailwindcss"],
      ["spring", "springjava"],
      ["next", "nextjs"],
      ["dotnet"],
    ],
  },
  {
    title: "Databases",
    order: [
      ["mysql"],
      ["postgres", "postgresql"],
      ["sqlserver", "sqlserver"],
      ["mongodb", "mongo"],
    ],
  },
  {
    title: "Other Tools",
    order: [
      ["pygame"],
      ["wordpress"],
      ["unity"],
      ["github"],
      ["gitlab"],
    ],
  },
];

const displayNames = {
  js: "JavaScript",
  javascript: "JavaScript",
  java: "Java",
  python: "Python",
  csharp: "C#",
  "c#": "C#",
  react: "React",
  tailwind: "Tailwind CSS",
  tailwindcss: "Tailwind CSS",
  spring: "Spring",
  springjava: "Spring",
  next: "Next.js",
  nextjs: "Next.js",
  dotnet: ".NET",
  mysql: "MySQL",
  postgres: "PostgreSQL",
  postgresql: "PostgreSQL",
  sqlserver: "SQL Server",
  mongodb: "MongoDB",
  mongo: "MongoDB",
  pygame: "Pygame",
  wordpress: "WordPress",
  unity: "Unity",
  github: "GitHub",
  gitlab: "GitLab",
};

const findByKeys = (keys) =>
  skillAssets.find((skill) => keys.some((key) => normalize(skill.label).includes(normalize(key))));

const sparkleSet = new Set(["js", "javascript", "python", "java", "react", "mysql", "github"]);

const groupedSkills = skillOrder.map((group) => {
  const items = group.order
    .map((keys) => findByKeys(keys))
    .filter(Boolean);
  return { title: group.title, items };
});

const doneProjects = projectLibrary.filter((project) => project.deliveryType !== "similar");
const templateProjects = projectLibrary.filter((project) => project.deliveryType === "similar");
